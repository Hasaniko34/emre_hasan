{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": ["templates/**", "static/**", "app.py", "data/**", "results/**", "report/**", "analysis/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "FLASK_APP": "app.py",
    "MATPLOTLIB_BACKEND": "Agg",
    "PYTHON_VERSION": "3.9"
  }
} 